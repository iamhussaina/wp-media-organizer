if ( ! defined( 'ABSPATH' ) ) {
    exit; 
}

// Include the core logic class.
require_once __DIR__ . '/src/class-hussainas-media-manager.php';

/**
 * Bootstraps the Media Manager.
 *
 * Ensures the class is loaded only once.
 */
function hussainas_start_media_system() {
    $media_manager = new Hussainas_Media_Manager();
    $media_manager->init();
}

// Initialize the system.
hussainas_start_media_system();
